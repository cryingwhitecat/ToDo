@model Todo.ViewModels.ToDoItemViewModel
<div class="row justify-content-center align-content-center">
    <div id="editItemModalDialog" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4>Edit Item</h4>
                </div>
                <div class="modal-body">
                    <form method="post" asp-controller="Account" asp-action="Edit">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Title)
                            @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @id = "EditTitleTextBox" })
                            @Html.ValidationMessageFor(model => model.Title)
                        <div class="form-group">
                            @Html.LabelFor(model => model.Finished)
                            <select class="form-control" asp-for="Finished">
                                <option value="true" style="color:green;">Done</option>
                                <option value="false" style="color:red;">Unfinished</option>
                            </select>
                        </div>
                            @Html.HiddenFor(model => model.UserId)
                            @Html.HiddenFor(model => model.ItemId,new { @id = "EditItemId" })
                        </div>
                        <input type="submit" value="Submit" class="btn btn-success" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

